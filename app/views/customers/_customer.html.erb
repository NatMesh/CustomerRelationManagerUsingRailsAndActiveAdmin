<h1>All Customers</h1>
<div class="row">
  <% @customers.each do |customer|%>
    <div class="border col-sm-6 col-md-6 col-lg-3">
      <h4><%= customer.full_name %></h4>

      <% if customer.image.present? %>
        <div class="img-fluid"><%= image_tag customer.image%></div>
      <% end %>

      <p><strong>Email: </strong> <%= customer.email_address %></p>

      <% if customer.notes.length > 1%>
        <p><strong>Notes: </strong> <%= customer.notes %></p>
      <% end %>
    </div>
  <% end %>
</div>